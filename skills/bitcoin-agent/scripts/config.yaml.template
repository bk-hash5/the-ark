# Bitcoin Agent Configuration
# Copy to config.yaml and fill in your values

server:
  host: "0.0.0.0"
  port: 8402
  workers: 1
  log_level: "info"

lnbits:
  url: "http://localhost:5000"
  api_key: "YOUR_LNBITS_INVOICE_READ_KEY"
  webhook_url: "http://localhost:8402/webhook/payment"

l402:
  secret_key: "CHANGE_ME_TO_A_RANDOM_SECRET"
  token_expiry_seconds: 86400  # 24 hours
  location: "https://your-agent.example.com"

# Pricing in satoshis per task
pricing:
  summarize: 50
  translate: 50
  code_gen: 500
  research: 2000
  content_write: 1000
  data_analyze: 500
  image_describe: 200

# LLM provider: "openai" or "anthropic"
llm:
  provider: "openai"
  model: "gpt-4o-mini"
  api_key: "YOUR_LLM_API_KEY"
  max_tokens: 4096

# Lightning Address support
lightning_address:
  enabled: true
  username: "agent"
  domain: "your-agent.example.com"
  min_sats: 10
  max_sats: 100000
  description: "Bitcoin AI Agent - pay for tasks"
